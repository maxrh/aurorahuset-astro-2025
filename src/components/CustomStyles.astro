---
import '@fontsource-variable/bricolage-grotesque';

// Available fonts:
// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
// 'Bricolage Grotesque Variable'
---

<style is:inline>
	:root {
		--aw-font-sans: 'Bricolage Grotesque Variable';
		--aw-font-serif: 'Bricolage Grotesque Variable';
		--aw-font-heading: 'Bricolage Grotesque Variable';

		--aw-color-primary: 201 61 74;
		--aw-color-secondary: 167 64 74;
		--aw-color-accent: 109 40 217;
		--aw-color-border: 232 230 225;

		--aw-color-contrast: 28 22 32; /* #1C1620 */
		--aw-color-page: 247 246 242; /* #F7F6F2 */

		--aw-color-light: 247 246 242;
		--aw-color-dark: 28 22 32;

		--aw-color-text-heading: rgb(28 22 32);
		--aw-color-text-default: rgb(28 22 32);
		--aw-color-text-muted: rgb(28 22 32 / 80%);
		--aw-color-text-muted-contrast: rgb(247 246 242 / 80%);

		::selection {
			background-color: lavender;
		}
	}

	.dark {
		--aw-font-sans: 'Bricolage Grotesque Variable';
		--aw-font-serif: 'Bricolage Grotesque Variable';
		--aw-font-heading: 'Bricolage Grotesque Variable';

		--aw-color-primary: 201 61 74;
		--aw-color-secondary: 167 64 74;
		--aw-color-accent: 109 40 217;
		--aw-color-border: 61 48 70;

		--aw-color-contrast: 247 246 242;
		--aw-color-page: 28 22 32;

		--aw-color-text-heading: rgb(247 246 242);
		--aw-color-text-default: rgb(247 246 242);
		--aw-color-text-muted: rgb(247 246 242 / 80%);
		--aw-color-text-muted-contrast: rgb(28 22 32 / 80%);

		::selection {
			background-color: black;
			color: snow;
		}
	}
</style>