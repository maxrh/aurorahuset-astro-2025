---
import '@fontsource-variable/bricolage-grotesque';

// Available fonts:
// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
// 'Bricolage Grotesque Variable'
---

<style is:inline>
  :root {
    --aw-font-sans: 'Bricolage Grotesque Variable';
    --aw-font-serif: 'Bricolage Grotesque Variable';
    --aw-font-heading: 'Bricolage Grotesque Variable';

    --aw-color-primary: rgb(201 61 74);
    --aw-color-secondary: rgb(167 64 74);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(46 36 54);
    --aw-color-text-default: rgb(46 36 54);
    --aw-color-text-muted: rgb(46 36 54 / 66%);
    --aw-color-bg-page: rgb(250 250 249);

    --aw-color-bg-page-dark: rgb(28, 22, 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Bricolage Grotesque Variable';
    --aw-font-serif: 'Bricolage Grotesque Variable';
    --aw-font-heading: 'Bricolage Grotesque Variable';

    --aw-color-primary: rgb(201 61 74);
    --aw-color-secondary: rgb(167 64 74);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(250 250 249);
    --aw-color-text-default: rgb(250 250 249);
    --aw-color-text-muted: rgb(250 250 249 / 66%);
    --aw-color-bg-page: rgb(28, 22, 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
