---
import { Icon } from 'astro-icon/components';

import { UI } from 'astrowind:config';

export interface Props {
	label?: string;
	class?: string;
	iconClass?: string;
	iconName?: string;
}

const {
	label = 'Toggle between Dark and Light mode',
	class:
		className = 'text-muted hover:bg-border focus:outline-none ease-in duration-200 focus:ring-border focus:ring-4 rounded-full aspect-square text-sm h-10 inline-flex items-center justify-center',
	iconClass = 'w-6 h-6',
	iconName = 'tabler:sun',
} = Astro.props;
---

{
	!(UI.theme && UI.theme.endsWith(':only')) && (
		<button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
			<Icon name={iconName} class={iconClass} />
		</button>
	)
}
